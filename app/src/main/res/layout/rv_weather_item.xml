<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_spacing">

    <TextView
        android:id="@+id/txt_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_spacing_fourth"
        android:layout_marginTop="4dp"
        android:textColor="@color/properties_color"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wind Speed" />

    <TextView
        android:id="@+id/txt_pro_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_spacing_two"
        android:layout_marginEnd="@dimen/default_spacing_two"
        android:textColor="@color/properties_color"
        app:layout_constraintBottom_toBottomOf="@id/img_pro"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="60%" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_pro"
        android:layout_width="@dimen/base_icon_size"
        android:layout_height="@dimen/base_icon_size"
        android:layout_marginEnd="@dimen/default_spacing_two"
        android:src="@drawable/ic_wind"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txt_pro_value"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>